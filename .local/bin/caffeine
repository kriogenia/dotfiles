on)
  killall hypridle 2>/dev/null
  hypridle -c "$XDG_CONFIG_HOME/hypr/caffeine.conf" >/dev/null &
  notify-send "â˜• time!"
  ;;
off)
  killall hypridle 2>/dev/null
  hypridle >/dev/null &
  notify-send "ðŸ’¤ back to dread"
  ;;
*)
  echo "Usage: $0 {on|off}"
  exit 1
  ;;
